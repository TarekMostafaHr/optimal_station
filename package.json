{
  "name": "opt-station",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "validate": "npm-run-all --parallel lint test",
    "build": "npm-run-all --parallel format validate build:*",
    "build:types": "tsc --emitDeclarationOnly --p tsconfig.build.json",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TarekMostafaHr/optimal_station.git"
  },
  "bugs": {
    "url": "https://github.com/TarekMostafaHr/optimal_station.git#readme/issues"
  },
  "homepage": "https://github.com/TarekMostafaHr/optimal_station.git#readme",
  "keywords": [],
  "author": "Tarek Mostafa",
  "license": "MIT",
  "files": [
    "lib/**/**"
  ],
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-numeric-separator": "7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-typescript": "7.3.3",
    "@types/jest": "24.0.18",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "cross-env": "5.2.0",
    "ghooks": "2.0.4",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
